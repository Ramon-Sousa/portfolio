generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  name         String
  imageProfile String
  email        String
}

model PostCategories {
  id         Int    @id @default(autoincrement())
  projectId  String
  categoryId String
}

model Category {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  slug        String
  project     Project[]
}

model Project {
  id          Int        @id @default(autoincrement())
  title       String
  slug        String
  content     String
  status      String
  isPublished Boolean
  createdOn   DateTime   @default(now())
  publishedOn DateTime   @updatedAt
  category    Category[]
}
